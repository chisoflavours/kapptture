.wrapper
  %h1 Edit Creator
  %br/
  %br/
  = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| 
    = f.error_notification 
    
    = f.input :email, required: true, autofocus: true, input_html: { class: 'area2' }, label: false, placeholder: "Email"
    %br/
    = f.input :name, input_html: { class: 'area2' }, label: false, placeholder: "Name"
    %br/
    = f.input :phone, input_html: { class: 'area2' }, label: false, placeholder: "Phone Number"
    %br/
    = f.input :about, input_html: { class: 'lgarea2' }, label: false, placeholder: "About"
    %br/
    
    - if devise_mapping.confirmable? && resource.pending_reconfirmation? 
      %p Currently waiting confirmation for: 
      = resource.unconfirmed_email 

    = f.input :password, autocomplete: "off", required: false, input_html: { class: 'area2' }, label: false, placeholder: "Change Password"
    %br/
    = f.input :password_confirmation, required: false , input_html: { class: 'area2' }, label: false, placeholder: "Change Password Confirmation"
    %br/
    .imgbutton
      = f.input :profile, as: :file, input_html: { hidden: true,class: 'imgbutton' }, label: 'Upload Avatar'
    
    %br/
    %br/
    %br/
    
    = f.input :current_password, required: true, input_html: { class: 'area2' }, label: false, placeholder: "Current Password"
    %br/
    %br/
    = f.button :submit, "Update",class: 'button3' 
    %br/
    %br/

  %h3.colour Delete my account
  %br/
  = link_to "Delete my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete,class: 'button' 
  %br/
  %br/
  %br/
  = link_to "Back", :back,class: 'link' 
